</div>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const printButton = document.querySelector('#print');
        printButton.addEventListener('click', () => {
            printJS('printForm', 'html');
        });

        const addItemModal = new bootstrap.Modal('#addItemModal');
    });
</script>